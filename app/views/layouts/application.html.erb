<head>
  <title>Yale Go</title>
  <link rel="shortcut icon" href="/assets/y_logo_200.png" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrapper">
  <div class="header">
    <div class="header-container">
      <div class="pull-left">
        <a href="/">
          <div class="link logo-link">
            <img id="logo" src="/assets/y_logo_200.png" alt="Yale Go" />
          </div>
        </a>
        <% if current_user %>
          <a href="#browse">
            <div class="link">
              Browse
            </div>
          </a>
          <a href="#calendar">
            <div class="link">
              Feed
            </div>
          </a>
          <a href="#dashboard">
            <div class="link">
              Dashboard
            </div>
          </a>
        <% end %>
        <a href="#about">
          <div class="link">
            About
          </div>
        </a>
      </div>
      <div class="pull-right">
        <% if current_user %>
          <div id="user-dropdown">
            <div class="link">
              <%= current_user.name %>
            </div>
            <ul>
              <li>
                <a href="#preferences">
                  <div class="link dropdown-link">
                    User Preferences
                  </div>
                </a>
              </li>
              <li>
                <a href="/logout">
                  <div class="link dropdown-link">
                    Logout
                  </div>
                </a>
              </li>
            </ul>
          </div>
        <% else %>
          <a href="/login">
            <div class="link">
              Login
            </div>
          </a>
        <% end %>
      </div>
    </div>
    
  </div>

  <%= yield %>
</div>
<%= javascript_include_tag "application" %>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC09xDhfZSSQwy2-P9x7LAyz7T-TLjNQwo&sensor=false">
</script>
<script type="text/javascript">
  // Setting global event format string
  Gandalf.currentUser = new Gandalf.Models.User();
  Gandalf.currentUser.url = '/me';
  Gandalf.currentUser.fetch({
    success: function() {
      window.router = new Gandalf.Router();
      Backbone.history.start();
    }
  });
</script>
</body>
</html>
