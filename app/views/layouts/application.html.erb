<!DOCTYPE html>
<html xmlns:fb="http://ogp.me/ns/fb#">
<head>
  <title>Yale Go</title>
  <link rel="shortcut icon" href="/assets/y_logo_200.png" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="fb-root"></div>
<!-- Set up Facebook first since Backbone uses it -->
<script>
window.fbAsyncInit = function() {
  FB.init({
    appId      : 444785732265505, // App ID
    // Uncomment channel when going into production, and set up route
    // channelUrl : '//WWW.YOUR_DOMAIN.COM/channel.html', // Channel File
    status     : true, // check login status
    cookie     : true, // enable cookies to allow the server to access the session
    xfbml      : true  // parse XFBML
  });
  FB.getLoginStatus(function(response) {
    if (response.status === 'connected') {
      Gandalf.facebookStatus = 'connected';
      Gandalf.facebookResponse = response.authResponse;
      Gandalf.currentUser.updateFacebook(
        response.authResponse.userID, response.authResponse.accessToken);
      // For development only
      Gandalf.dispatcher.trigger("facebook:login");
    } else if (response.status === 'not_authorized') {
      Gandalf.facebookStatus = 'not_authorized';
      Gandalf.dispatcher.trigger("facebook:login");
    } else {
      Gandalf.facebookStatus = 'not_connected';
      Gandalf.dispatcher.trigger("facebook:login");
    }
  });
  // Additional init code here
};

// Load the SDK Asynchronously
(function(d){
   var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
   if (d.getElementById(id)) {return;}
   js = d.createElement('script'); js.id = id; js.async = true;
   js.src = "//connect.facebook.net/en_US/all.js";
   ref.parentNode.insertBefore(js, ref);
 }(document));
</script>
<div class="wrapper">
  <%= yield %>
</div>

<% # Load backbone %>
<%= javascript_include_tag "application" %>
<% # Set up backbone %>
<script type="text/javascript">
  // Setting global event format string
  Gandalf.currentUser = new Gandalf.Models.User();
  Gandalf.currentUser.url = '/me';
  Gandalf.currentUser.fetch({
    success: function() {
      window.router = new Gandalf.Router();
      Backbone.history.start();
    }
  });
</script>

<!-- Load gauges -->
<script type="text/javascript">
  var _gauges = _gauges || [];
  (function() {
    var t   = document.createElement('script');
    t.type  = 'text/javascript';
    t.async = true;
    t.id    = 'gauges-tracker';
    t.setAttribute('data-site-id', '5130914c613f5d3ba700003d');
    t.src = '//secure.gaug.es/track.js';
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(t, s);
  })();
</script>
<!-- Google maps -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC09xDhfZSSQwy2-P9x7LAyz7T-TLjNQwo&sensor=false">
</script>
</body>
</html>
